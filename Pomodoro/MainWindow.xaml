<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="Pomodoro" Height="350" Width="450" Background="#FF131313" Foreground="#FFE9E9E9" MinWidth="450" MinHeight="350" Icon="/Jillportrait2.png">
    <Grid>
        <Label x:Name="TimerLabel" Content="25:00" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFEAEAEA" FontSize="48" Margin="0,0,0,60"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,46,0,0" RenderTransformOrigin="0.5,0.5" Orientation="Horizontal" >
            <Button x:Name="StartBtn" Content="Start" Width="50" Click="OnStartBtn"/>
            <Button Content="Reset" Width="50" Margin="25,0" Click="OnResetBtn"/>
            <Button Content="Pause" Width="50" Click="OnPauseBtn"/>
        </StackPanel>
        <Grid/>
    </Grid>

</Window>